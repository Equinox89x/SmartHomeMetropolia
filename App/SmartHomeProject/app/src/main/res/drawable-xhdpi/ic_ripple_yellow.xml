<?xml version="1.0" encoding="utf-8"?>
<!-- An white rectangle ic_ripple_pink. -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_checked="true">
            <ripple android:color="@color/colorYellowRipple">
                <item>
                    <shape>
                        <corners android:radius="6dp" />
                        <solid android:color="@color/colorYellowRipple" />
                    </shape>
                </item>
            </ripple>
        </item>

        <item>
            <ripple android:color="@color/colorYellowRipple">
                <item>
                    <shape>
                        <corners android:radius="6dp" />
                        <solid android:color="@color/colorYellow" />
                    </shape>
                </item>
            </ripple>
        </item>

    </selector>